@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<ActivityTracker.Models.Activity>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>All Actvities</h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>IsComplete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.Id</td>
                    <td>@activity.Name</td>
                    <td>@activity.Date</td>
                    <td>@(activity.IsComplete ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
